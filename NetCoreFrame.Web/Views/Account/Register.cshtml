@model NetCoreFrame.Entities.DTO.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}



<div class="container-fluid h-100 mt-5">
    <div class="row justify-content-center align-items-center h-100">
        <div class="col col-sm-6 col-md-6 col-lg-4 col-xl-4">

            <h3 class="mb-3">Register</h3>
            <div asp-validation-summary="All"></div>
            <form method="post">
                <div class="form-floating mb-4">
                    <input asp-for="FirstName" class="form-control" placeholder="john" maxlength="100" />
                    <label asp-for="FirstName"></label>
                    <div class="invalid-feedback">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-floating mb-4">
                    <input asp-for="LastName" class="form-control" placeholder="doe" maxlength="100"/>
                    <label asp-for="LastName"></label>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="Email" class="form-control" placeholder="xxx@example.com" />
                    <label asp-for="Email"></label>
                    <div class="invalid-feedback">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-floating mb-4">
                    <input asp-for="Password" class="form-control" placeholder="xxxxxxx" />
                    <label asp-for="Password" class="form-label"></label>
                    <div class="invalid-feedback">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="xxxxxxx" />
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <div class="invalid-feedback">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>


                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-outline-dark">Register</button>
                </div>

                <div class="text-center mt-3">
                    <a asp-area="" asp-controller="Account" asp-action="LogIn">Back to Login</a>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

