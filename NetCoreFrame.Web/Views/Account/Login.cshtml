@model NetCoreFrame.Entities.DTO.LogInViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container-fluid h-100 mt-5">
    <div class="row justify-content-center align-items-center h-100">
        <div class="col col-sm-6 col-md-6 col-lg-4 col-xl-4">

            <h3 class="mb-3">Login</h3>
            <div asp-validation-summary="All"></div>
            <form method="post" class="form_login">
                
                <div class="form-floating mb-4">
                    <input asp-for="Email" class="form-control" placeholder="xxx@example.com" />
                    <label asp-for="Email"></label>
                    <div class="invalid-feedback">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-floating mb-4">
                    <input asp-for="Password" class="form-control" placeholder="xxxxxxx" />
                    <label asp-for="Password" class="form-label"></label>
                    <div class="invalid-feedback">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

              
                <div class="d-grid gap-2 mb-3">
                    <button type="submit" class="btn btn-outline-dark">Login</button>
                </div>

                <div class="text-center">
                    <a asp-area="" asp-controller="Account" asp-action="Register">Don't have an account?</a>
                </div>
             

                
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}